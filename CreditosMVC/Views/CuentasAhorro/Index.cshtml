@model List<TbCuentasAhorro>

    <h1>Cuentas de ahorro</h1>
   @* <p>
        <a asp-action="Agregar" asp-route>Nueva cuenta de ahorro</a>
    </p>*@
    <table class="table table table-striped">
        <thead>
            <tr>
            <th>Cliente</th>
            <th>Numero de cuenta</th>
            <th>Saldo actual</th>
            <th>Fecha alta</th> 
            <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach(var cuenta in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(m=>cuenta.IdClienteNavigation.Nombre)&nbsp;@Html.DisplayFor(m=>cuenta.IdClienteNavigation.Apellidos)</td>
                    <td>@Html.DisplayFor(m=>cuenta.NumeroCuenta)</td>
                    <td>@Html.DisplayFor(m=>cuenta.SaldoActual)</td>
                    <td>@Html.DisplayFor(m=>cuenta.FechaCreacion)</td>
                    <td>
                        <a class="btn btn-primary" asp-action="Depositar" asp-controller="Transacciones" asp-route-id="@cuenta.IdCuentaAhorro">Depositar</a>
                        <a class="btn btn-danger" asp-action="Retirar" asp-controller="Transacciones" asp-route-id="@cuenta.IdCuentaAhorro">Retirar</a>
                         <a class="btn btn-success" asp-action="HistorialTransacciones" asp-controller="Transacciones" asp-route-id="@cuenta.IdCuentaAhorro">Ver Historial de transacciones</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>