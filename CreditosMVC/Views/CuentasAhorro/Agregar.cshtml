@using CreditosMVC.Models.ViewsModels
@model CuentasAhorroViewModel

<h1>Nueva cuenta de ahorro</h1> <b>Cliente: @ViewBag.ClienteNombre</b>

<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Agregar">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <div class="mb-3">
                <label asp-for="NumeroCuenta" class="control-label"></label>
                <input asp-for="NumeroCuenta" class="form-control" />
                <span asp-validation-for="NumeroCuenta" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <div class="mb-3">
                <label asp-for="SaldoActual" class="control-label"></label>
                <input asp-for="SaldoActual" class="form-control" />
                <span asp-validation-for="SaldoActual" class="text-danger"></span>
                </div>
            </div>

             <div class="form-group" style="display:none;">
                <label asp-for="IdCliente" class="control-label"></label>
                <select asp-for="IdCliente" class="form-control" asp-items="ViewBag.Clientes"></select> 
                <span asp-validation-for="IdCliente" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-primary" style="margin-right:1rem;" />

                 <a class="btn btn-light" asp-action="Index" asp-controller="Clientes">Regresar</a>
            </div>
           
        </form>
    </div>
</div>

@section Scripts{

    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}